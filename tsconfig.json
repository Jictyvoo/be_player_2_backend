{
  "target": "esnext",
  "module": "commonjs",
  "moduleResolution": "node",
  "compilerOptions": {
    "sourceMap": true,
    "outDir": "dist",
    "sourceRoot": "./src/",
    "strict": true,
    "lib": ["esnext"],
    "removeComments": true,
    "esModuleInterop": true,
    "paths": {
      "@middlewares/*": ["./src/middlewares/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@routes/*": ["./src/routes/*"],
      "@entities/*": ["./src/entities/*"],
      "@init/*": ["./src/init/*"]
    }
  },
  "noImplicitAny": true,
  "strict": false
}
